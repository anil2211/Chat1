<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#913c89"
    tools:context="com.example.anil.chat.ProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_image"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/facebookavatar" />

    <TextView
        android:id="@+id/profile_visit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_image"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Display user Name"
        android:textColor="#f3f3f9"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_visit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_user"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Display user Status"
        android:textColor="#f3f3f9"
        android:textSize="18dp" />

    <Button
        android:id="@+id/profile_visit_send_btn"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_visit_decline_btn"
        android:layout_alignStart="@+id/profile_visit_decline_btn"
        android:layout_below="@+id/profile_visit_status"
        android:layout_marginTop="35dp"
        android:background="#cd3838df"
        android:text="Send Friend Request"
        android:textColor="#f3f3f9"
        android:textSize="16dp" />

    <Button
        android:id="@+id/profile_visit_decline_btn"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_send_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#cde11041"
        android:text="Decline Friend Request"
        android:textColor="#f3f3f9"
        android:textSize="16dp" />

</RelativeLayout>
