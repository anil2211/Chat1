<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
/>

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_image_view"
        android:layout_alignStart="@+id/msg_profile_img"
        android:background="@drawable/msg_text_background"
        android:padding="11dp"
        android:text="TextView"
        android:textColor="#e3e3e7"
        android:textSize="14dp"
        android:layout_marginLeft="180dp"/>

    <ImageView
        android:id="@+id/message_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/msg_profile_img"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

</RelativeLayout>