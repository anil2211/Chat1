<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anil.chat.StatusActivity">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/status_app_bar"/>

    <EditText
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_app_bar"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:padding="30dp"
        android:hint="change status here"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/save_status_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status_input"
        android:layout_alignStart="@+id/status_input"
        android:layout_below="@+id/status_input"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="56dp"
        android:text="Save changes"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"/>

</RelativeLayout>
